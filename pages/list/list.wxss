/**index.wxss**/

page {
  background-color: #f6f6f6;
}


.nav-scroll{
  height:95rpx;
  display:flex;
  background:#ffffff; 
  white-space:nowrap;  
}
.nav-scroll .scroll-view-item{

  line-height:86rpx; 
  background:#fff;
  color:#3c4050;
  font-size:30rpx;
  padding:3px 30rpx;  
  display: inline-block;
    
}

.nav-scroll .scroll-view-item.active{
  padding-bottom:0;
  color:#14c67d;
  border-bottom:3rpx solid #14c67d;  
}


.order-list {
  margin: 40rpx 30rpx 0;
  background: #fff;
  border-radius: 15rpx;
  border: 1px solid #ebebeb;
  position: relative; 
}

.order-list .soma-hd {
  color: #3c4050;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ebebeb;
}
.order-list .order-num{
  float:left; 
  font-size:28rpx; 
}

.order-list .order-time{
  float:right;
  font-size:22rpx;  
}

.order-list .soma-hd text {
  margin-right: 10rpx;
  color: #14c67d;
}

.order-list .item-cell {
  position: relative;
  padding: 20rpx 27rpx;
  border-bottom: 1px solid #ebebeb;
}

.order-list .item-cell .time .tag {
  font-size: 28rpx;
}

.order-list .item-cell .time .tag .txt-1 {
  background: #5a5d73;
  border-radius: 5rpx;
  padding: 0 10rpx;
  color: #fff;
  font-size: 22rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 8rpx;
  margin-top: -5rpx;
}

.order-list .person-info {
  color: #666;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.order-list .address {
  color: #666;
  font-size: 28rpx;
  position: absolute;
  right: 27rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.order-list .arrow{
  position:absolute;
  left:0;
  top:0;
  width:200rpx;
  height: 100rpx; 

}
.order-list .arrow view{
   width:0; 
  height:0;
  position:absolute;
  left:0;
  top:0; 
  border-width:30rpx;
  border-style:solid;
  border-top-left-radius: 10rpx;
 
  border-color:#27c896 transparent transparent #27c896;
}
.order-list .arrow text{
  position: absolute;
  z-index: 5;
  top:2rpx;
  left:8rpx;
  font-size: 20rpx;
  color:#fff; 
 
}