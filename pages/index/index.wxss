/**index.wxss**/

page{
  background-color: #f6f6f6;
}
.header-top{
  background:#18c67e; 
}
.avatar-box{
  padding:0 30rpx; 
}
.avatar-box .pic{
  float:left;  
   width:60rpx;
  height:60rpx;
  overflow:hidden;
  border-radius:100%;
  background:#fff; 
  margin-right:20rpx;   
}
.avatar-box .txt{
  float:left;
  color:#ffffff;
  line-height:60rpx; 
  font-size:32rpx;   
}

.level-tag{
  margin-top:12rpx; 
  float:left;
  position:relative;
  padding:5rpx 0 5rpx 20rpx; 
  height:36rpx;
  margin-left:10rpx; 
}

.level-tag .icon-level{
  width: 36rpx;
  height:36rpx;
  line-height:36rpx; 
  border-radius:50%; 
  background:#f1b94d;
  overflow:hidden;
  text-align: center; 
  position: absolute;
  left:0;
  top:0;
}
.level-tag .icon-level text{
  color:#fff;
  font-size:27rpx; 
}

.level-tag .tag-name{
  background:#4c4f61;
  height:30rpx;
  line-height:30rpx;
  background:#4e5163;
  font-size: 22rpx;
  color:#fff;
  border-radius:20rpx;
  padding: 0rpx 20rpx;     
}
.list-item{
   background:#18c67e; 
}
.list-item .num{
  color:#fff;
  font-size:44rpx;
  margin:0 auto; 
  position: relative;
  display: inline-block;  
}
.list-item .num .circle{
    width:14rpx;
    height:14rpx;
    position: absolute;
    right:-7rpx; 
    top:0rpx;
    background:#ff0000;
    border-radius:100%;   
}

.list-item .txt{
  color:#e4e4e4;
  font-size:24rpx;
  text-align: center;
 
}

.list-item .item-cell{
    float:left; 
    text-align:center;
    
}
.list-item .item-1,
.list-item .item-2,
.list-item .item-3{
  padding:60rpx 0;
  border-bottom:1px solid #46d299;  
  
}

.list-item .item-4,
.list-item .item-5{
  padding:50rpx 0;
 
  
}

.list-item .item-4 .txt,
.list-item .item-5 .txt{
  margin-right:6rpx; 
 
  
}
.list-item .item-4 .item-detail{
  box-sizing: border-box;
  border-right: 1px solid #5cd6a4;
}



.list-item .item-1 .txt,
.list-item .item-2 .txt,
.list-item .item-3 .txt{
 display:block; 
}
.list-item .item-1{
  width: 33.33%;
  
}
.list-item .item-2{
  width: 33.33%;
 
}

.list-item .item-2 .item-detail{

  border-left:1px solid #5ed8a6;
  border-right:1px solid #5ed8a6;
}
.list-item .item-3{
  width: 33.33%;
}
.list-item .item-4{
  width: 50%;
}
.list-item .item-5{
  width: 50%;
}

.new-order-list{
  margin:40rpx 30rpx 0;
  background:#fff;
  border-radius:15rpx;   
  border:1px solid #ebebeb;
}
.new-order-list .soma-hd{
  color:#3c4050;
  height:90rpx;
  line-height:90rpx;
  padding:0 25rpx;   
  font-size:28rpx;
  border-bottom:1px solid #ebebeb;  
}
.new-order-list .soma-hd text{
  margin-right:10rpx;
  color:#14c67d;  
}
.new-order-list .item-cell{
  position:relative;
  padding:20rpx 27rpx;
  border-bottom:1px solid #ebebeb;  
}
.new-order-list .item-cell .time .tag{
  font-size:28rpx; 
}
.new-order-list .item-cell .time .tag .txt-1{
    background:#5a5d73;
    border-radius:5rpx;
    padding:0 10rpx;
    color:#ffffff;
    font-size:22rpx;
    height:28rpx;
    line-height:28rpx;     
}
.new-order-list .person-info{
  color:#666666;
  font-size:24rpx;  
}
.new-order-list .address{
  color:#666666;
  font-size: 28rpx;
  position: absolute;
    right:27rpx;
    top: 50%;
    -webkit-transform: translate(0,-50%);
    -ms-transform: translate(0,-50%);
    -moz-transform: translate(0,-50%);
}
